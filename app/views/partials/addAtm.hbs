<section class="ui raised segment">
  <div class="ui grid ">
    <div class="ui form six wide column">
      <div class="ui stacked segment">
        <form action="/addAtm" method="POST">
            {{! }}
            <div class="field">
                <div class="text" name="name">
                    <div class="text">Add new <i class="bitcoin icon"></i>ATM location</div>
                    <input type="text" name ="name" placeholder="Name">
                    <div class="ui input"></div>
                    {{!-- {{Dropdown list - categories}} --}}
                    {{! remember to place name=... both in div and input!! }}
                    <div class="field">
                        <div class="ui form">
                            <div class="ui dropdown" name="category">
                                <input type="hidden" name="category">
                                <div class="text">Choose ATM Category</div>
                                <i class="ui dropdown icon"></i>
                                <div class="menu">
                                    <div class="item">Bitcoin only!</div>
                                    <div class="item">Multiple cryptocurrencies</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {{!-- {{Dropdown end}} --}}
            </div>
            <div class="field">
                <div class="text" name="description"></div>
                <div class="text">Add description</div>
                <div class="ui form">
                    <input type="text" name="description" placeholder="Thoroughly please ;)">
                </div>
            </div>
          <button class="ui blue submit button">Submit</button>
        </form>
      </div>
    </div>
    <aside class="six wide column">
      <img src="images/btc_atm_3.png" class="ui big image">
    </aside>
  </div>
